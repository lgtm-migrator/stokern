      <span class="navbar-text">ADMIN</span>
    <% end %>
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" id="profileDropdownMenuLink" data-toggle="dropdown"
         aria-haspopup="true" aria-expanded="false">
           <%= current_user.forename.blank? ? "User's" : "#{current_user.forename}'s" %> Profile
      </a>
      <div class="dropdown-menu" aria-labelledby="profileDropdownMenuLink">
        <%= link_to t('menu.edit_account'), edit_user_registration_path, class: 'dropdown-item' %>
